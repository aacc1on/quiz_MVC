<div class="result-container">
    <div class="result-header">
        <h2>üéâ Quiz Completed!</h2>
        <div class="user-info-result">
            <p><strong><%= name %> <%= surname %></strong></p>
            <p class="completion-time">Completed on <%= new Date().toLocaleDateString() %></p>
        </div>
    </div>
    
    <div class="score-section">
        <div class="score-card">
            <div class="score-main">
                <span class="score-number"><%= score %></span>
                <span class="score-total">/ <%= total %></span>
            </div>
            <div class="percentage <%= percentage >= 70 ? 'excellent' : percentage >= 50 ? 'good' : 'needs-improvement' %>">
                <%= percentage %>%
            </div>
            <div class="score-message">
                <% if (percentage >= 70) { %>
                    <span class="message excellent">üéâ Excellent work! Outstanding performance!</span>
                <% } else if (percentage >= 50) { %>
                    <span class="message good">üëç Good effort! Keep practicing!</span>
                <% } else { %>
                    <span class="message needs-improvement">üìö Keep studying! You can improve!</span>
                <% } %>
            </div>
            
            <div class="performance-stats">
                <div class="stat-item">
                    <span class="stat-number"><%= score %></span>
                    <span class="stat-label">Correct</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= total - score %></span>
                    <span class="stat-label">Wrong</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number"><%= total %></span>
                    <span class="stat-label">Total</span>
                </div>
            </div>
        </div>
    </div>
    
    <% if (wrongAnswers && wrongAnswers.length > 0) { %>
        <div class="wrong-answers-section">
            <h3>üìö Review Your Mistakes (<%= wrongAnswers.length %> question<%= wrongAnswers.length !== 1 ? 's' : '' %>):</h3>
            <div class="wrong-answers-list">
                <% wrongAnswers.forEach(function(mistake, index) { %>
                    <div class="wrong-answer-item">
                        <div class="mistake-header">
                            <h4>Question <%= mistake.questionNumber %></h4>
                            <span class="word-badge">üìù <%= mistake.word %></span>
                        </div>
                        <div class="mistake-content">
                            <div class="question-block">
                                <p class="question"><strong>‚ùì Question:</strong> <%= mistake.question %></p>
                            </div>
                            
                            <div class="answer-comparison">
                                <div class="user-answer-block">
                                    <p class="user-answer">
                                        <strong>Your answer:</strong> 
                                        <span class="wrong-answer"><%= mistake.userAnswer %></span>
                                    </p>
                                </div>
                                <div class="correct-answer-block">
                                    <p class="correct-answer-line">
                                        <strong>Correct answer:</strong> 
                                        <span class="correct-answer"><%= mistake.correctAnswer %></span>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="all-options">
                                <strong>All options:</strong>
                                <div class="options-grid">
                                    <% mistake.options.forEach(function(option, optIndex) { %>
                                        <div class="option-item <%= option === mistake.correctAnswer ? 'correct-option' : option === mistake.userAnswer ? 'wrong-option' : 'neutral-option' %>">
                                            <span class="option-letter"><%= String.fromCharCode(65 + optIndex) %>)</span>
                                            <span class="option-text"><%= option %></span>
                                            <% if (option === mistake.correctAnswer) { %>
                                                <span class="option-status correct">‚úÖ</span>
                                            <% } else if (option === mistake.userAnswer) { %>
                                                <span class="option-status wrong">‚ùå</span>
                                            <% } %>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    <% } else { %>
        <div class="perfect-score-section">
            <div class="perfect-score-card">
                <h3>üèÜ Perfect Score!</h3>
                <p>Congratulations! You answered all questions correctly!</p>
                <div class="celebration-emoji">üéäüéâüèÜüéä</div>
            </div>
        </div>
    <% } %>
    
    <div class="result-actions">
        <a href="/quiz" class="btn btn-primary btn-large">
            üîÑ Take Quiz Again
        </a>
        <a href="/" class="btn btn-secondary btn-large">
            üè† Go Home
        </a>
        <button onclick="window.print()" class="btn btn-outline btn-large">
            üñ®Ô∏è Print Results
        </button>
    </div>
</div>

