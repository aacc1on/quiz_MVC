    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 2px solid #e1e8ed;
}

.quiz-question {
    margin-bottom: 2rem;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    border: 2px solid #e1e8ed;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
