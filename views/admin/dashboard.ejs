<div class="admin-dashboard">
    <div class="dashboard-header">
        <h2>üìä Admin Dashboard</h2>
        <div class="stats">
            <div class="stat">
                <span class="stat-number"><%= hasQuiz ? quizQuestionCount : 0 %></span>
                <span class="stat-label">Questions</span>
            </div>
            <div class="stat">
                <span class="stat-number"><%= resultsCount %></span>
                <span class="stat-label">Submissions</span>
            </div>
        </div>
    </div>
    
    <div class="dashboard-section">
        <h3>ü§ñ Generate New Quiz</h3>
        <form action="/admin/generate-quiz" method="POST" class="quiz-form">
            <div class="form-group">
                <label for="text">Enter text to generate quiz from:</label>
                <textarea 
                    id="text" 
                    name="text" 
                    rows="8" 
                    placeholder="Enter at least 20 characters of text to generate vocabulary questions..."
                    required
                    minlength="20"
                ></textarea>
                <small>Minimum 20 characters required. The AI will analyze this text and create vocabulary questions.</small>
            </div>
            <button type="submit" class="btn btn-primary" id="generate-btn">
                ‚ú® Generate Quiz
            </button>
        </form>
    </div>
    
    <% if (hasQuiz) { %>
        <div class="dashboard-section">
            <h3>‚úÖ Current Quiz Status</h3>
            <div class="quiz-status">
                <p>üéØ Quiz is ready with <strong><%= quizQuestionCount %></strong> questions</p>
                <p>üîó Quiz URL: <a href="/quiz" target="_blank" rel="noopener">Take Quiz</a></p>
                <p>üìä Total submissions: <strong><%= resultsCount %></strong></p>
            </div>
        </div>
    <% } else { %>
        <div class="dashboard-section">
            <h3>‚ö†Ô∏è No Quiz Available</h3>
            <div class="quiz-status">
                <p>üìù Generate a quiz using the form above</p>
                <p>ü§ñ AI will create 10 vocabulary questions from your text</p>
            </div>
        </div>
    <% } %>
    
    <div class="dashboard-actions">
        <a href="/admin/results" class="btn btn-secondary">
            üìà View Results
        </a>
        <% if (hasQuiz) { %>
            <a href="/quiz" class="btn btn-outline" target="_blank" rel="noopener">
                üß™ Test Quiz
            </a>
        <% } %>
    </div>
</div>

<style>
.admin-dashboard {
    padding: 1rem 0;
}

.dashboard-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
}

.dashboard-header h2 {
    margin: 0 0 1rem 0;
    font-size: 2.2rem;
}

.stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 1rem;
}

.stat {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 1rem 1.5rem;
    text-align: center;
    backdrop-filter: blur(10px);
}

.stat-number {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: white;
}

.stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
}

.dashboard-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 2px solid #e5e7eb;
}

.dashboard-section h3 {
    margin-top: 0;
    color: #374151;
    font-size: 1.3rem;
    margin-bottom: 1rem;
}

.quiz-form .form-group {
    margin-bottom: 1.5rem;
}

.quiz-form label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #374151;
}

.quiz-form textarea {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border-radius: 8px;
    border: 2px solid #d1d5db;
    resize: vertical;
    min-height: 120px;
    font-family: inherit;
    transition: border-color 0.2s;
}

.quiz-form textarea:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.quiz-form small {
    display: block;
    margin-top: 0.5rem;
    color: #6b7280;
    font-size: 0.9rem;
}

.quiz-status {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #d1d5db;
}

.quiz-status p {
    margin: 0.5rem 0;
    color: #374151;
    font-size: 1rem;
}

.quiz-status a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
}

.quiz-status a:hover {
    text-decoration: underline;
}

.dashboard-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
}

#generate-btn:disabled {
    background: #9ca3af;
    cursor: not-allowed;
}

@media (max-width: 768px) {
    .stats {
        flex-direction: column;
        align-items: center;
    }
    
    .dashboard-actions {
        flex-direction: column;
    }
    
    .dashboard-header h2 {
        font-size: 1.8rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.getElementById('text');
    const generateBtn = document.getElementById('generate-btn');
    
    if (textarea && generateBtn) {
        function updateButton() {
            const textLength = textarea.value.trim().length;
            if (textLength < 20) {
                generateBtn.disabled = true;
                generateBtn.textContent = `Need ${20 - textLength} more characters`;
            } else {
                generateBtn.disabled = false;
                generateBtn.textContent = '‚ú® Generate Quiz';
            }
        }
        
        textarea.addEventListener('input', updateButton);
        updateButton(); // Initial check
        
        // Form submission
        const form = textarea.closest('form');
        form.addEventListener('submit', function() {
            generateBtn.disabled = true;
            generateBtn.textContent = 'ü§ñ Generating quiz...';
        });
    }
});
</script>